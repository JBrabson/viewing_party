<h1><%= @welcome_message %></h1>
<h4><%= @register_message %></h4>
<%= form_with model: @user, local: true do |f| %>
  <p><%= f.label :username, "Username: " %></p>
  <p><%= f.text_field :username %></p>
  <p><%= f.label :email, "Email: " %></p>
  <p><%= f.text_field :email %></p>
  <p><%= f.label :password, "Password: " %></p>
  <p><%= f.text_field :password %></p>
  <p><%= f.label :password_confirmation, "Password Confirmation: " %></p>
  <p><%= f.text_field :password_confirmation %></p>
  <p><%= f.submit "Register" %></p>
<% end %>
