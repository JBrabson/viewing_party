<h1><%= @welcome_message %></h1>
<h4><%= @description %></h4>
<%= form_with url: root_path, method: :post, local: true do |f| %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.submit 'Login' %>
<% end %>
<%= link_to "Ready to Join the Party? Register Here", registration_path %>
